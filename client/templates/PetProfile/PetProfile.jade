template(name="PetProfile")
  .containter-fluid
    .row
      .col.s6.m6
        .card.white.no-shadow.no-border
          .card-content
            .container-fluid
              .row
                .profile-photos
                  .pics
                    img.pet(src="{{c.url thisPet.profile.photo.public_id width='200' height='200' crop='fill' radius='max' border='0px_solid_white'}}")
                    img.owner(src="{{c.url userPic width='100' height='100' crop='fill' radius='max' border='0px_solid_white'}}")
      .col.s6.m6
        .card.white.no-shadow.no-border
          .card-content
            span.card-title
              h3.grey-darken-5-text {{thisPet.profile.name}}
              h6.black-text {{thisPet.profile.breed}}
            p.blue-text 
              @ {{thisPetsOwnerUsername}}
            p.light-blue-text 
              i.fa.fa-user
              | {{thisPetsOwnerProfile.firstName}} {{thisPetsOwnerProfile.lastName}}   
            p.grey-text  
              i.fa.fa-map-marker
              | {{thisPetsOwnerProfile.location.city}}, {{thisPetsOwnerProfile.location.state}}
            .row
              .fixed-action-btn.horizontal.click-to-toggle(style='bottom: 45px; right: 24px;')
                a.btn-floating.btn-large.red
                  i.fa.fa-pencil
                ul
                  li
                    a.btn-floating.red
                      i.fa.fa-photo
                  li
                    a.btn-floating.yellow.darken-1
                      i.fa.fa-user
                  li
                    a.btn-floating.green
                      i.fa.fa-map-marker
                  li
                    a.btn-floating.blue
                      i.fa.fa-quote-right


            .row
              span.grey-text
                a(href='#')
                  i.fa.fa-paw
                  | 123
                a(href='#')
                  i.fa.fa-paw
                  | 456
                a(href='#')
                  i.fa.fa-paw
                  | 789

          .card-action.text-center
            button.btn.btn-sm.light-blue.white-text(href='#') Follow
          
    .row
      table
        tbody
          tr
            td.text-center
              a(href='#')
                i.fa.fa-paw.fa-2x
            td.text-center
              a(href='#')
                i.fa.fa-picture-o.fa-2x
            td.text-center
              a(href='#')
                i.fa.fa-tree.fa-2x
            td.text-center
              a(href='#')
                i.fa.fa-shopping-bag.fa-2x
            td.text-center
              a(href='#')
                i.fa.fa-scissors.fa-2x
